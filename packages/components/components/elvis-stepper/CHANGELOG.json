{
  "$schema": "../../changelogSchema.json",
  "name": "elvis-stepper",
  "content": [
    {
      "date": "16.04.24",
      "version": "1.5.0",
      "changelog": [
        {
          "type": "new_feature",
          "changes": [
            "Removed the max-width of the stepper, allowing it to grow to the full width of the step content."
          ]
        }
      ]
    },
    {
      "date": "04.04.24",
      "version": "1.4.0",
      "changelog": [
        {
          "type": "new_feature",
          "changes": [
            "Added new event <code>onNextClick</code>. It is emitted when the user clicks the 'next' button, even if the stepper is forced to stay on the current step."
          ]
        }
      ]
    },
    {
      "date": "19.03.24",
      "version": "1.3.0",
      "changelog": [
        {
          "type": "new_feature",
          "changes": [
            "Added new prop to <code>stepStates</code>. <code>nextStepState</code> can add a loading state to the 'next' button."
          ]
        }
      ]
    },
    {
      "date": "30.01.24",
      "version": "1.2.1",
      "changelog": [
        {
          "type": "bug_fix",
          "changes": [
            "Fixed an issue with the <code>nextButtonText</code> and <code>previousButtonText</code> props, ensuring it is possible to set the button texts of each step."
          ]
        }
      ]
    },
    {
      "date": "08.01.24",
      "version": "1.2.0",
      "changelog": [
        {
          "type": "new_feature",
          "changes": [
            "Added an <code>onFinish</code> event that emits when the user clicks the final 'next' button."
          ]
        },
        {
          "type": "bug_fix",
          "changes": [
            "Fixed an issue with the <code>valueOnChange</code> event, ensuring it now only triggers if the new value is different from the previous one."
          ]
        }
      ]
    },
    {
      "date": "13.12.23",
      "version": "1.1.2",
      "changelog": [
        {
          "type": "bug_fix",
          "changes": [
            "Fixed so that event listeners that are added to elements inside the content slot will work (e.g. buttons with click listeners).",
            "Updated internal dependencies."
          ]
        }
      ]
    },
    {
      "date": "06.10.23",
      "version": "1.1.1",
      "changelog": [
        {
          "type": "patch",
          "changes": ["Updated internal dependencies."]
        }
      ]
    },
    {
      "date": "24.08.23",
      "version": "1.1.0",
      "changelog": [
        {
          "type": "new_feature",
          "changes": ["Dark theme support."]
        }
      ]
    },
    {
      "date": "02.08.23",
      "version": "1.0.1 ",
      "changelog": [
        {
          "type": "patch",
          "changes": ["Updated internal dependencies."]
        }
      ]
    },
    {
      "date": "18.07.23",
      "version": "1.0.0 ",
      "changelog": [
        {
          "type": "new_feature",
          "changes": ["First version of the Stepper component"]
        }
      ]
    }
  ]
}
