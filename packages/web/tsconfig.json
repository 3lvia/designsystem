{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@elvia/elvis-toolbox": ["../components/components/elvis-toolbox/"] // Make web listen to changes to toolbox
    },

    "noImplicitReturns": false, // TODO: Remove line -> fix errors
    "noImplicitThis": false, // TODO: Remove line -> fix errors
    "noImplicitAny": false, // TODO: Remove line -> fix errors
    "strictNullChecks": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
