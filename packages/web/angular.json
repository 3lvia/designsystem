{
  "$schema": "../../node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "packageManager": "yarn",
    "cache": {
      "enabled": false
    },
    "schematicCollections": ["@angular-eslint/schematics"],
    "analytics": false
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "elvia-designsystem": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true,
          "standalone": true
        },
        "@schematics/angular:directive": {
          "skipTests": true,
          "standalone": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true,
          "standalone": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/elvia-designsystem",
            "allowedCommonJsDependencies": [
              "@elvia/elvis-assets-icons/config/icons.config.js",
              "@elvia/elvis/elvis.js",
              "@elvia/elvis/checkDeprecations",
              "hoist-non-react-statics",
              "json5",
              "lodash.isequal",
              "lodash.throttle",
              "natural-compare-lite",
              "prismjs",
              "react",
              "react-dom",
              "react-dom/client",
              "react-is",
              "dompurify",
              "classnames",
              "file-saver",
              "jszip"
            ],
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/robots.txt", "src/sitemap.xml", "src/assets", "src/_redirects"],
            "loader": {
              ".html": "text",
              ".css": "text"
            },
            "styles": ["src/styles.scss"],
            "extractLicenses": false,
            "sourceMap": {
              "scripts": true,
              "styles": true,
              "hidden": false,
              "vendor": true
            },
            "optimization": false,
            "namedChunks": true
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "12mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "10kb",
                  "maximumError": "20kb"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "elvia-designsystem:build:production"
            },
            "development": {
              "buildTarget": "elvia-designsystem:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    }
  }
}
