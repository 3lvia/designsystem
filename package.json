{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/components/*",
      "packages/components/frameworks/*"
    ],
    "nohoist": [
      "**/bootstrap",
      "**/babel-loader",
      "**/webpack",
      "**/webpack-dev-server",
      "**/@elvia/elvis-assets-icons",
      "**/@elvia/elvis-dropdown",
      "**/@elvia/elvis-divider",
      "**/@elvia/elvis-breadcrumb"
    ]
  },
  "scripts": {
    "build:web": "yarn && cd packages/elvis-assets-icons && yarn run build && cd ../components && yarn run build && cd ../web && yarn run build:production NODE_ENV=production && yarn run contentful && cd ../components/frameworks/react-ssr && yarn run production",
    "prettier-elvis": "yarn prettier --write \"packages/elvis/**/*.js\"",
    "prettier-doc": "yarn prettier --write \"packages/web/src/**/*.ts\"",
    "prettier-comp": "yarn prettier --write \"packages/components/**/*.{js,ts,tsx}\"",
    "eslint": "./node_modules/.bin/eslint --fix \"./**/*.{js,ts,tsx}\"",
    "lint-all": "yarn run prettier-elvis && yarn run prettier-doc && yarn run prettier-comp && yarn run eslint",
    "percy": "cd packages/elvis; yarn run percy",
    "component-tests": "cd packages/components; yarn test && echo SUCCESS",
    "test:staged": "cd packages/components; jest --bail --findRelatedTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ./scripts/pre-commit.sh",
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "lint-staged": {
    "packages/elvis/**/*.+(md|css|sass|less|graphql|yml|yaml|scss|json|vue)": [
      "yarn run prettier-elvis",
      "git add"
    ],
    "packages/web/**/*.+(js|ts|tsx)": [
      "yarn run prettier-doc",
      "yarn run eslint",
      "git add"
    ],
    "packages/components/components/**/*.+(js|ts|tsx)": [
      "yarn run prettier-comp",
      "yarn run eslint",
      "yarn test:staged",
      "git add"
    ]
  },
  "resolutions": {
    "immer": "9.0.6"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@percy/script": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "codelyzer": "^5.2.2",
    "eslint": "^7.17.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2",
    "@vue/cli-service": "4.5.13",
    "@vue/cli-plugin-eslint": "~5.0.0-rc.1"
  }
}
