{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/components/*",
      "packages/components/frameworks/*"
    ]
  },
  "scripts": {
    "build": "yarn && yarn build:tokens && nx run-many --target=build:production --exclude=react-ssr,elvia-designsystem && yarn build:tokens && yarn build:elvis && nx build:production elvia-designsystem && nx build:production react-ssr",
    "build:web": "nx build elvia-designsystem",
    "build:components": "nx build @elvia/elvis-components",
    "build:elvis": "nx build @elvia/elvis",
    "build:tokens": "nx run-many --target=build --projects=@elvia/elvis-colors,@elvia/elvis-typography,@elvia/elvis-assets-icons",
    "build:colors": "nx build @elvia/elvis-colors",
    "build:typography": "nx build @elvia/elvis-typography",
    "build:icons": "nx build @elvia/elvis-assets-icons",
    "start:web": "yarn contentful && nx start elvia-designsystem",
    "start:components": "nx start @elvia/elvis-components",
    "start:elvis": "nx start @elvia/elvis",
    "start:react": "nx start react-ssr",
    "start:vue": "nx start vue-preview",
    "start:icons": "nx start @elvia/elvis-assets-icons",
    "contentful": "cd packages/web && yarn contentful",
    "contentful:production": "cd packages/web && yarn contentful:production",
    "prettier-elvis": "prettier --write \"packages/elvis/**/*.js\"",
    "prettier-doc": "prettier --write \"packages/web/src/**/*.ts\"",
    "prettier-comp": "prettier --write \"packages/components/**/*.{js,ts,tsx}\"",
    "eslint": "./node_modules/.bin/eslint --fix \"./**/*.{js,ts,tsx}\"",
    "lint-all": "yarn prettier-elvis && yarn prettier-doc && yarn prettier-comp && yarn eslint",
    "test": "nx test @elvia/elvis-components",
    "test:start": "nx test:start @elvia/elvis-components",
    "test:staged": "cd packages/components; jest --bail --findRelatedTests",
    "publish": "yarn workspaces foreach -ipv --no-private npm publish --access public",
    "nx:graph": "yarn nx graph",
    "nx:clear": "yarn nx clear-cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "lint-staged": {
    "packages/elvis/**/*.+(md|css|sass|less|graphql|yml|yaml|scss|json|vue)": [
      "./scripts/elvis-pre-commit.sh",
      "yarn prettier-elvis"
    ],
    "packages/web/**/*.+(js|ts|tsx)": [
      "yarn prettier-doc",
      "yarn eslint"
    ],
    "packages/components/components/**/*.+(js|ts|tsx)": [
      "yarn prettier-comp",
      "yarn eslint",
      "yarn test:staged"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@date-io/core": "^1.3.6",
    "@nrwl/nx-cloud": "latest",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vue/cli-plugin-eslint": "~5.0.0-rc.1",
    "@vue/cli-service": "4.5.13",
    "codelyzer": "^6.0.2",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "nx": "14.5.10",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0",
    "react-is": ">= 16.8.0",
    "rxjs": "^6.5.3",
    "safe-json-stringify": "^1.2.0",
    "tslint": "~6.1.0",
    "typescript": "~4.7.2",
    "zone.js": "~0.11.4"
  },
  "resolutions": {
    "@types/react": "17.0.39"
  },
  "packageManager": "yarn@3.2.1"
}
