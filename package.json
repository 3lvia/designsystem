{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/components/*",
      "packages/components/frameworks/*"
    ]
  },
  "scripts": {
    "start:web": "cd packages/elvis && yarn build && cd ../web && yarn contentful && yarn start",
    "start:components": "yarn build:colors && yarn build:typography && cd packages/components && yarn watch",
    "start:elvis": "cd packages/elvis && yarn watch",
    "start:react": "cd packages/components/frameworks/react-ssr && yarn start",
    "start:vue": "cd packages/components/frameworks/vue-test && yarn start",
    "build:components": "yarn build:colors && yarn build:typography && cd packages/components && yarn build",
    "build:web": "yarn && yarn build:colors && yarn build:typography && cd packages/elvis-assets-icons && yarn run build && cd ../components && yarn run build:production && cd ../web && yarn run contentful:production && yarn run build:production && cd ../components/frameworks/react-ssr && yarn run production",
    "build:elvis": "cd packages/elvis && yarn build",
    "build:colors": "cd packages/elvis-colors && yarn build",
    "build:typography": "cd packages/elvis-typography && yarn build",
    "contentful": "cd packages/web && yarn contentful",
    "prettier-elvis": "yarn prettier --write \"packages/elvis/**/*.js\"",
    "prettier-doc": "yarn prettier --write \"packages/web/src/**/*.ts\"",
    "prettier-comp": "yarn prettier --write \"packages/components/**/*.{js,ts,tsx}\"",
    "eslint": "./node_modules/.bin/eslint --fix \"./**/*.{js,ts,tsx}\"",
    "lint-all": "yarn run prettier-elvis && yarn run prettier-doc && yarn run prettier-comp && yarn run eslint",
    "component-tests": "cd packages/components; yarn test && echo SUCCESS",
    "test:staged": "cd packages/components; jest --bail --findRelatedTests",
    "publish": "yarn workspaces foreach -ipv --no-private npm publish --access public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "lint-staged": {
    "packages/elvis/**/*.+(md|css|sass|less|graphql|yml|yaml|scss|json|vue)": [
      "./scripts/elvis-pre-commit.sh",
      "yarn run prettier-elvis",
      "git add"
    ],
    "packages/web/**/*.+(js|ts|tsx)": [
      "yarn run prettier-doc",
      "yarn run eslint",
      "git add"
    ],
    "packages/components/components/**/*.+(js|ts|tsx)": [
      "yarn run prettier-comp",
      "yarn run eslint",
      "yarn test:staged",
      "git add"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@date-io/core": "^1.3.6",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vue/cli-plugin-eslint": "~5.0.0-rc.1",
    "@vue/cli-service": "4.5.13",
    "codelyzer": "^6.0.2",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0",
    "react-is": ">= 16.8.0",
    "rxjs": "^6.5.3",
    "safe-json-stringify": "^1.2.0",
    "tslint": "~6.1.0",
    "typescript": "~4.7.2",
    "zone.js": "~0.11.4"
  },
  "resolutions": {
    "@types/react": "17.0.39"
  },
  "packageManager": "yarn@3.2.1"
}
