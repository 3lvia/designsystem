{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/components/*",
      "packages/components/frameworks/*"
    ]
  },
  "scripts": {
    "build:web": "yarn && cd ../web && yarn run build:production",
    "commitizen-unix": "exec < /dev/tty && git cz --hook",
    "commitizen-windows": "winpty git cz --hook || true",
    "lint-elvis": "npx prettier --write 'packages/elvis/**/*.js'",
    "lint-doc": "npx prettier --write 'packages/web/src/**/*.ts'",
    "eslint": "./node_modules/.bin/eslint --fix \"./**/*.{js,ts,tsx}\"",
    "lint-all": "yarn run lint-elvis && yarn run lint-doc && yarn run eslint",
    "percy": "cd packages/elvis; yarn run percyTest"
  },
  "lint-staged": {
    "packages/elvis/**/*.+(md|css|sass|less|graphql|yml|yaml|scss|json|vue)": [
      "npx prettier --write",
      "git add"
    ],
    "packages/web/**/*.+(js|ts|tsx)": [
      "./node_modules/.bin/eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/commitizen.sh",
      "pre-commit": "lint-staged && ./scripts/pre-commit.sh",
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "prettier": "^2.0.5",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@percy/script": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "codelyzer": "^5.2.2",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.2.0",
    "del": "^5.1.0",
    "eslint": "^7.1.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.7",
    "sharp": "^0.26.1",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "node-sass": "npm:sass"
  }
}