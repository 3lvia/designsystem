{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/components/*",
      "packages/react-test",
      "packages/vue-test"
    ]
  },
  "scripts": {
    "build": "yarn build:tokens && yarn build:elvis:prod && yarn build:components:prod && yarn build:web:prod",
    "build:elvis": "nx build @elvia/elvis",
    "build:elvis:prod": "nx build:production @elvia/elvis --skip-nx-cache",
    "build:components": "nx build @elvia/elvis-components",
    "build:components:prod": "nx build:production @elvia/elvis-components --skip-nx-cache",
    "build:web": "nx build elvia-designsystem",
    "build:web:prod": "yarn contentful:production && nx run-many --target=build:production --projects=elvia-designsystem,react-test --parallel=1 --skip-nx-cache",
    "build:tokens": "nx run-many --target=build --projects=@elvia/elvis-colors,@elvia/elvis-typography,@elvia/elvis-assets-icons --skip-nx-cache",
    "start:elvis": "nx start @elvia/elvis",
    "start:components": "nx start @elvia/elvis-components",
    "start:web": "yarn contentful && nx start elvia-designsystem",
    "start:react": "nx start react-test",
    "start:vue": "nx start vue-test",
    "start:icons": "nx start @elvia/elvis-assets-icons",
    "contentful": "nx contentful elvia-designsystem",
    "contentful:production": "nx contentful:production elvia-designsystem --skip-nx-cache",
    "prettier:elvis": "prettier --write \"packages/elvis/**/*.js\"",
    "prettier:components": "prettier --write \"packages/components/**/*.{js,ts,tsx}\"",
    "prettier:web": "prettier --write \"packages/web/src/**/*.ts\"",
    "lint": "./node_modules/.bin/eslint --fix \"./**/*.{js,ts,tsx}\"",
    "lint:all": "yarn prettier:elvis && yarn prettier:web && yarn prettier:components && yarn eslint",
    "test": "nx test @elvia/elvis-components",
    "test:start": "nx test:start @elvia/elvis-components",
    "test:staged": "cd packages/components; jest --bail --findRelatedTests",
    "publish": "yarn workspaces foreach -ipv --no-private npm publish --access public",
    "nx:graph": "yarn nx graph",
    "nx:clear": "yarn nx clear-cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/elvis/**/*.+(md|css|sass|less|graphql|yml|yaml|scss|json|vue)": [
      "yarn prettier:elvis"
    ],
    "packages/web/**/*.+(js|ts|tsx)": [
      "yarn prettier:web",
      "yarn lint"
    ],
    "packages/components/components/**/*.+(js|ts|tsx)": [
      "yarn prettier:components",
      "yarn lint"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "prettier": "^2.8.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "express": "^4.17.1",
    "gulp-stylelint": "^13.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^13.2.2",
    "nx": "16.1.0",
    "nx-cloud": "16.0.5",
    "postcss": "^8.4.21",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-is": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "safe-json-stringify": "^1.2.0",
    "stylelint": "^15.6.2",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "typescript": "~5.0.4"
  },
  "packageManager": "yarn@3.5.0"
}
