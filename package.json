{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/components/*",
      "packages/components/frameworks/*"
    ],
    "nohoist": [
      "**/bootstrap",
      "**/@elvia/elvis-assets-icons"
    ]
  },
  "scripts": {
    "build:web": "yarn && cd packages/elvis-assets-icons && yarn run build && cd ../components && yarn run gulp && cd ../web && yarn run build:production",
    "commitizen-unix": "exec < /dev/tty && git cz --hook",
    "commitizen-windows": "winpty git cz --hook || true",
    "prettier-elvis": "yarn prettier --write 'packages/elvis/**/*.js'",
    "prettier-doc": "yarn prettier --write 'packages/web/src/**/*.ts'",
    "prettier-comp": "yarn prettier --write 'packages/components/**/*.{js,ts,tsx}'",
    "eslint": "./node_modules/.bin/eslint --fix \"./**/*.{js,ts,tsx}\"",
    "lint-all": "yarn run prettier-elvis && yarn run prettier-doc && yarn run prettier-comp && yarn run eslint",
    "percy": "cd packages/elvis; yarn run percy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ./scripts/pre-commit.sh",
      "prepare-commit-msg": "./scripts/commitizen.sh",
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "lint-staged": {
    "packages/elvis/**/*.+(md|css|sass|less|graphql|yml|yaml|scss|json|vue)": [
      "yarn run prettier-elvis",
      "git add"
    ],
    "packages/web/**/*.+(js|ts|tsx)": [
      "yarn run prettier-doc",
      "yarn run eslint",
      "git add"
    ],
    "packages/components/**/*.+(js|ts|tsx)": [
      "yarn run prettier-comp",
      "yarn run eslint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "**/optimist/minimist": "0.2.1",
    "**/react-dev-utils/immer": "^8.0.1",
    "node-sass": "npm:sass"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "codelyzer": "^5.2.2",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.17.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}