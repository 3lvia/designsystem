{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "all angular dependencies",
      "groupSlug": "angular-minor-patch",
      "matchPackagePatterns": ["^@angular"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "groupName": "typescript dependency",
      "groupSlug": "typescript-patch",
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["patch"],
      "automerge": false
    }
  ],
  "ignoreDeps": ["styled-components", "bootstrap", "react", "react-dom"],
  "ignorePaths": ["**/node_modules/**", "packages/components/components/**", "packages/elvis*"]
}
